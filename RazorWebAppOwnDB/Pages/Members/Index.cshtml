@page
@model RazorWebAppOwnDB.Pages.Members.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>

@*Ability to search for certain members*@
<form>
    <p>
        First Name Search: <input type="text" name="searchString">
        <input type="submit" value="Filter" />
        

        Course Name Search: <input type="text" name="searchCourse">
        <input type="submit" value="Filter" />

       @*<select asp-for="specificMajor" asp-items="Model.Majors">
            <option value="">All Majors</option>
        </select>*@

        <a asp-page="./Index">Return to full directory</a>

    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].FirstName)
            </th>
                <th>
                    <a asp-page="./Index" asp-route-sortOrder="@Model.LastSort">
                        @Html.DisplayNameFor(model => model.Member[0].LastName)
                    </a>
                </th>
                <th>
                    <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">
                    @Html.DisplayNameFor(model => model.Member[0].InitiationDate)</a>
                    @*@Html.DisplayNameFor(model => model.Member[0].InitiationDate)*@
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.Member[0].Major)*@
                    <a asp-page="./Index" asp-route-sortOrder="@Model.MajorSort">
                        @Html.DisplayNameFor(model => model.Member[0].Major)
                    </a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Member[0].CurrentCourses)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Member) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InitiationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Major)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentCourses)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
